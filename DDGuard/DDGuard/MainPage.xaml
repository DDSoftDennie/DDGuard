<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DDGuard"
             x:Class="DDGuard.MainPage"
             Title="DDGuard">

    <StackLayout VerticalOptions="FillAndExpand" Margin="10">

       <Button x:Name="NoConnectionButton" BackgroundColor="Red" Text="Error: No Internet!" TextColor="White" HorizontalOptions="FillAndExpand" IsVisible="False"
          Clicked="NoConnectionButton_Clicked"     />

        <Grid VerticalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="HappyButton" Text="😊 Happy" TextColor="White" FontSize="37" ImageSource="" BackgroundColor="Green" Clicked="HappyButton_Clicked" BorderWidth="5" BorderColor="Black"/>
            <!--Spaces in text SadButton are needed to place text below emoji-->
            <Button Grid.Row="0" Grid.Column="1" x:Name="SadButton" Text="😥       Sad" TextColor="White" FontSize="37" BackgroundColor="Red" Clicked="SadButton_Clicked" BorderColor="Black" BorderWidth="5"/>
            <Button Grid.Row="1" Grid.Column="0" x:Name="AngerButton" Text="😡 Anger" FontSize="37" TextColor="White" BackgroundColor="Red" Clicked="AngerButton_Clicked" BorderColor="Black" BorderWidth="5"/>
            <Button Grid.Column="1" Grid.Row="1" x:Name="AnxiousButton" Text="😨 Anxious" FontSize="35" TextColor="White" BackgroundColor="Red" Clicked="AnxiousButton_Clicked" BorderColor="Black" BorderWidth="5"/>
        </Grid>
     
        <Button x:Name="ReportButton" BackgroundColor="Blue" Text="Report" FontSize="37" TextColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
             Clicked="ReportButton_Clicked" BorderColor="Black" BorderWidth="5" CornerRadius="25" />
        <Button x:Name="SiteButton" BackgroundColor="Blue" BorderColor="Black" BorderWidth="5" CornerRadius="25" Text="Browse for Relaxation" FontSize="37" TextColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
              Clicked="SiteButton_Clicked"  />

    </StackLayout>

</ContentPage>
