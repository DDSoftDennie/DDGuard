<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DDGuard.ReportPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label FontAttributes="Bold">Feelings:</Label>
                <Button x:Name="HappyButton" BackgroundColor="Yellow" TextColor="Blue" FontSize="37" Clicked="HappyButton_Clicked"/>
                <Button x:Name="SadButton" BackgroundColor="Yellow" TextColor="Blue" FontSize="37" Clicked="SadButton_Clicked"/>
                <Button x:Name="AngerButton" BackgroundColor="Yellow" TextColor="Blue" FontSize="37" Clicked="AngerButton_Clicked"/>
                <Button x:Name="AnxientButton" BackgroundColor="Yellow" TextColor="Blue" FontSize="37" Clicked="AnxientButton_Clicked"/>
                </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>